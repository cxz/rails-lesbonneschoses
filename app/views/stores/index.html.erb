<div id="stores" class="main">

<section id="page-header">

  <div style="background-image: url(<%= @document['article.image'].get_view('main').url %>)">
    <div>
      <h1><%= @document['article.title'].as_text %></h1>

      <%= @document['article.short_lede'].as_text %>
    </div>
  </div>

</section>

<section id="page-body">
  <%= @document['article.content'].as_html_safe(link_resolver(maybe_ref)) %>

  <% @stores.each do |store| %>
      <article class="store" style="background-image: url(<%= store['store.image'].get_view('medium').url %>)">
        <%= link_to(show_store_path(store.id, slug: store.slug, ref: maybe_ref)) do %>
            <h3><%= store['store.name'].as_text %></h3>
        <% end %>
      </article>
  <% end %>

</section>
</div>